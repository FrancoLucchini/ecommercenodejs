    <div class="container p-5">
        <h2>Page {{pagination.page}} of {{pagination.pageCount}}</h2>
        <hr>
        <div class="row">
            {{#each products}}
            <div class="col-md-3">
                <div class="card mb-3">
                    <a href="../product/{{id}}"><img src="{{path}}" class="card-img-top" style="max-height: 200px;"></a>
                    <div class="card-body">
                        <h5 class="card-title text-center"><strong>{{title}}</strong></h5>
                        <p class="card-text text-center">${{price}}</p>
                        <a href="product/{{id}}"><button class="btn btn-lg btn-block btn-success">View
                                Product</button></a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <nav class="navbar mx-auto">
                <ul class="pagination">
                    {{#paginate pagination type="first"}}
                    <li {{#if disabled}}class="disabled" {{/if}} class="page-item">
                        <a href="{{n}}" class="page-link">First</a>
                    </li>
                    {{/paginate}}
                    {{#paginate pagination type="previous"}}
                    <li {{#if disabled}}class="disabled" {{/if}} class="page-item">
                        <a href="{{n}}" class="page-link">Prev</a>
                    </li>
                    {{/paginate}}
                    {{#paginate pagination type="middle" limit="7"}}
                    <li {{#if active}}class="active" {{/if}} class="page-item">
                        <a href="{{n}}" class="page-link">{{n}}</a> </li>
                    {{/paginate}}
                    {{#paginate pagination type="next"}}
                    <li {{#if disabled}}class="disabled" {{/if}} class="page-item">
                        <a href="{{n}}" class="page-link">Next</a>
                    </li>
                    {{/paginate}}
                    {{#paginate pagination type="last"}}
                    <li {{#if disabled}}class="disabled" {{/if}} class="page-item">
                        <a href="{{n}}" class="page-link">Last</a>
                    </li>
                    {{/paginate}}
                </ul>
            </nav>
        </div>
    </div>