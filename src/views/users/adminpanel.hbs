<div class="container p-5">
    <div class="row">
        <div class="col-md-12">
            <p class="h3 float-left">Orders</p>
            <hr class="mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Cart</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>PaymentId</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
            {{#each orders}}
                    <tr>
                        <td>
                           {{name}}
                        </td>
                        <td>
                            <a href="/user/admin/order/{{id}}">See cart</a>
                        </td>
                        <td>
                            {{address}} {{numberAddress}}
                        </td>
                        <td>
                            {{status}}
                        </td>
                        <td>
                            {{paymentId}}
                        </td>
                        <td>{{this.cart.totalPrice}}</td>
                        <td>
                            <form action="/user/order/{{id}}/finish?_method=PUT" method="POST">
                            <button class="btn btn-success btn-block">Finish</button>
                            </form>
                        </td>
                    </tr>
            {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>