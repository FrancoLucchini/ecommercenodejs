<div class="container">
    <h3 class="text-center mt-5">SignUp!</h3>
    <div class="row">
        <div class="col-md-12">
            <form action="/user/signup" method="POST">
                <div class="row mt-2">
                    <div class="col">
                        <input type="text" class="form-control" name="name" placeholder="Insert your name" value="{{name}}">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="surname" placeholder="Insert your surname" value="{{surname}}">
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col">
                        <input type="text" class="form-control" name="username" placeholder="What would you like to be called?" value="{{username}}">
                    </div>
                    <div class="col">
                        <input type="email" class="form-control" name="email" placeholder="Insert your email" value="{{email}}">
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col">
                        <input type="password" class="form-control" name="password" placeholder="Insert a password">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="confirm" placeholder="Confirm password">
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-lg btn-success mt-5">Submit</button>
            </form>
        </div>
    </div>
</div>