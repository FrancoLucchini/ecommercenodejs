<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
        <h3 class="text-center">Checkout</h3>
        <h4>Your total: ${{total}}</h4>
            <form id="payment-form" action="/checkout" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Adress" name="address">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Number" name="number">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Card Holder name" name="name">
                </div>

                <div id="card-element"></div>
                <div id="card-errors" role="alert"></div>

               <button class="btn btn-success btn-block">Submit Payment</button>
            </form>
        </div>
    </div>
</div>