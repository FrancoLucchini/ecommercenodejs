{{#if products}}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
            <div class="card text-center">
                <div class="card-header">
                    Purchase
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{this.item.title}}</td>
                                <td>{{this.qty}}</td>
                                <td>${{this.item.price}}</td>
                                <td>${{this.price}}</td>
                                <td><button class="btn btn-block btn-danger"><a href="/reduce/{{this.item._id}}">Reduce one</a></button>
                                <button class="btn btn-block btn-danger"><a href="/remove/{{this.item._id}}">Remove</a></button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <div class="row offset-md-3 mt-3">
        <div class="col-md-6">
            <strong>Total: ${{totalPrice}}</strong>
        </div>
        
        <div class="col-md-6">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>

    {{else}}
    <div class="row">
        <div class="col-md-6 offset-md-4">
            <h2>No items in Cart</h2>
        </div>
    </div>
    {{/if}}

</div>